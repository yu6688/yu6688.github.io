//整体
*{margin: 0;padding: 0;}
@none:none;
a{text-decoration: @none;}
li{list-style: @none;}
#container{
    width: 100%;
}
body{height: 1800px;}
//导航
.menu{position: absolute;left: 0;top: 0;z-index: 300;width: 100%;height: 47px;
    .kslogo{position:absolute;top: 10px;left: 10px;width: 30px;height: 30px;}
    .mod_nav_title{font-size:25px;position: absolute;top: 13px;left: 50px;padding:2px;display: block;width: 95px;height: 20px;color: #FFE7DE;text-align: center;}
    .mod_nav_toggle{position: absolute;right: 0;top: 0;padding: 15px 15px 25px 25px;color: -webkit-link;cursor: auto;-webkit-tap-highlight-color: rgba(0,0,0,0);
        .icon_nav{background-image:url(../../img/productimg/kang1.png);display: inline-block;width: 18px;height: 18px;}
    }
}
//主要内容
#wrap{
    .item{width: 100%;height: 100%;position: absolute;background-size: cover;overflow: hidden;background-repeat: no-repeat;background-position: center top;}
    .item-1{background-image:url(../../img/productimg/banner2.jpg);
         .box1{display: -webkit-box;-webkit-box-align: center;position: relative;width: 100%;height: 100%;overflow: hidden;
             .mod_down_show{opacity: 1;width: 90%;margin: 0 auto;top: auto;bottom: auto;
                       .mod_down_title{width: 220px;margin-bottom: 10px;
                           .logo{overflow: hidden;text-indent: -999px;font-size: 0;line-height: 0;margin-bottom: 5px;}
                           .logo_version{display:block;background-image:url(../../img/productimg/logo1.png);width: 95px;height: 14px;background-size: 95px auto;font-weight: 400;}
                           h3{font-size: 24px;color: #fff;font-weight: 400;}
                       }
                       .mod_down_phone{display: block;width: 100%;height: auto;position: relative;padding-top: 78.5%;overflow: hidden;
                           img{border: 0;vertical-align: middle;}
                           .mod_down_p1{position: absolute;display: block;width: 30%;top: 0;left: 2%;margin-top: 11.5%;}
                           .mod_down_p2{position: absolute;display: block;width: 34%;top: 0;left: 33%;margin-top: 6%;}
                           .mod_down_p3{position: absolute;display: block;width: 30%;top: 0;left: 68%;margin-top: 11.5%;}
                           .mod_down_pbg{position: absolute;left: 0;top: 0;width: 100%;height: auto;}
                       }
             }
        }     
    }
.erji:hover{
                
                animation: peng 1s infinite;
            }
            
            @keyframes peng{
                100%{
                    transform: scale(1.1);
                }
            }

.item-2{height: 700px;background:#F5F5F5;
        .box{width: 100%;height: 100%;overflow: hidden; margin: 0 auto;
            .feature_show{width:44%;height: 20%;float:left;position: relative;margin-left:15px;margin-top:20px;
            .feature_show_img{width: 100%;height: 100%;
                 
                 
                     
               }  
            }
        }
    }
}   

.box h2{margin-left: 18px;margin-top: 20px;} 
.feature_info{position: absolute;
                                left: 0;
                                bottom: 0;
                                width: 100%;
                                height: 26px;
                                background: #656565;
                                opacity: 0.6;
                       
                       .feature_info_txt{font-size: 14px;}
                 }
@color:#FFFCF5;
 .feature_info_title{font-size: 15px;font-weight: 400;line-height: 26px;
               position: absolute;
               display: inline-block;
                left: 5px;
                bottom: 0;
                color:@color;}
.feature_info_title2{font-size: 16px;font-weight: 400;line-height: 26px;
               position: absolute;
               display: inline-block;
                left: 70%;
                bottom: 0;
                color: @color;
                }
.feature_info_title3{
               position: absolute;
                left: 58%;
                bottom: 2px;
                
                img{width: 19px;height: 19px;}
                }
.item-3{height: 600px;background:#F5F5F5;top:5px;
        .box{width: 100%;height: 74%; margin: 0 auto;
            .feature_show{width:28%;height: 22%;float:left;position: relative;margin-left:15px;margin-top:36px;border-radius: 50%;
            .feature_show_img{width: 100%;height: 100%;border-radius: 50%;       
               }  
            }
        }
    }   
.feature_info_title4{font-size: 15px;font-weight: 400;line-height: 26px;
               position: absolute;
               display: inline-block;
                left: 20%;
                bottom: -30px;
                color:black;}

   

    .feature_photo{position: relative;width: 60%;height: auto;background-size: 100% auto;}
    .mod_nav_list{position: absolute;z-index: 3;right: 10px;top: 40px; background-color: #fff;border: 1px solid rgba(0,0,0,.2);border-radius: 3px;zoom: 1;}
    .mod_nav_list li{margin: 0 15px;border-bottom: 1px solid #d9d9d9;}
    .mod_nav_list li:last-child{border-bottom: 0px;}
    .mod_nav_item{display: block;text-align: center;font-size: 14px;line-height: 42px;color: #000;}             
#back{width: 40px;height: 40px;position: fixed;bottom: 20px;right: 5%;display: none;
    img{width: 40px;height: 40px;
    }
    }              
