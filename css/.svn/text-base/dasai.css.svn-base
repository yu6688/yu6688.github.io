* {
  margin: 0;
  padding: 0;
}
a {
  text-decoration: none;
}
li {
  list-style: none;
}
#container {
  max-width: 1400px;
  margin: 0 auto;
}
.head {
  height: 30px;
  background: #333333;
  overflow: hidden;
  width: 100%;
}
.head li {
  float: right;
  margin-right: 20px;
}
.head li:first-child {
  margin-right: 80px;
}
.head a {
  color: #b5b5b5;
  font-size: 12px;
  line-height: 30px;
}
.head a:hover {
  color: white;
}
.menu {
  max-height: 140px;
  overflow: hidden;
}
.menu .klogo {
  float: left;
  margin-top: 18px;
  margin-left: 74px;
}
.menu li {
  float: left;
  line-height: 100px;
  height: 80px;
  width: 76px;
  text-align: center;
  margin-bottom: 20px;
}
.menu .active {
  background: #F05549;
}
.menu .active a {
  color: white;
}
.menu a {
  color: #898989;
  font-size: 18px;
}
.menu a:hover {
  color: #F05549;
}
.menu2 {
  width: 100%;
  height: 50px;
  background: white ;
  position: fixed;
  top: 0;
}
.menu2 .kslogo {
  margin-top: 10px;
  margin-left: 20px;
  width: 110px;
  height: 30px;
}
.container1 {
  width: 1204px;
  height: 1400px;
  margin: 0 auto;
}
.container1 .act_show {
  min-width: 340px;
  min-height: 230px;
  overflow: hidden;
}
.container1 .act_show li {
  float: left;
  margin-left: 45px;
  margin-top: 20px;
}
.container1 .act_show img {
  width: 340px;
  height: 180px;
}
.container1 .showp {
  display: block;
  -webkit-margin-before: 1em;
  -webkit-margin-after: 1em;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
  color: #000;
}
.container1 .act_show p {
  font-size: 16px;
  display: block;
  -webkit-margin-before: 1em;
  -webkit-margin-after: 1em;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
  color: #000;
}
.container2 {
  width: 100%;
  margin-top: 50px;
}
.container2 .act_show li {
  margin-top: 20px;
}
.container2 .act_show img {
  margin: 0 auto ;
  margin-left: 20px;
  width: 90%;
}
.container2 p {
  margin-left: 18px;
  font-weight: bold;
  color: #000;
  font-size: 18px;
}
