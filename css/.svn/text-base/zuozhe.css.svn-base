* {
  margin: 0;
  padding: 0;
}
a {
  text-decoration: none;
  cursor: auto;
}
li {
  list-style: none;
}
body {
  height: 100%;
  display: block;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 400;
}
img {
  border: 0;
  vertical-align: middle;
}
.menu {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 300;
  width: 100%;
  height: 47px;
  background-color: #fff;
  opacity: 0.8;
}
.menu .kslogo {
  position: absolute;
  top: 10px;
  left: 10px;
  width: 110px;
  height: 30px;
}
.menu .mod_nav_title {
  position: absolute;
  top: 13px;
  right: 50px;
  display: block;
  width: 45px;
  height: 20px;
  border: 1px solid #e95f55;
  border-radius: 18px;
  color: #e95f55;
  text-align: center;
}
.menu .mod_nav_toggle {
  position: absolute;
  right: 0;
  top: 0;
  padding: 15px 15px 25px 25px;
  color: -webkit-link;
  cursor: auto;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
.menu .mod_nav_toggle .icon_nav {
  background-image: url(../../img/productimg/kang.png);
  display: inline-block;
  width: 18px;
  height: 18px;
}
.mod_wrap {
  width: 100%;
  margin: 0 auto;
}
.mod_wrap .clear_fix {
  zoom: 1;
}
.mod_wrap .clear_fix:before {
  content: "";
  display: block;
}
.mod_wrap .clear_fix:after {
  content: "";
  display: table;
  clear: both;
}
.mod_wrap .mod_content {
  float: none;
  width: auto;
}
.mod_wrap .mod_content .play_show {
  position: relative;
}
.mod_wrap .mod_content .play_show .play_info {
  position: relative;
  width: 100%;
  padding-top: 100%;
  height: 0;
  overflow: hidden;
}
.mod_wrap .mod_content .play_show .play_info .play_barrage {
  position: absolute;
  z-index: 10;
  top: 8%;
  width: 200%;
  height: 75%;
  left: 768px;
}
.mod_wrap .mod_content .play_show .play_info .play_barrage .play_barrage__para {
  border: solid 1px rgba(255, 255, 255, 0.6);
  position: absolute;
  padding: 0 10px;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  color: lightblue;
  border-radius: 27px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.mod_wrap .mod_content .play_show .play_info .play_barrage .animation_bar {
  -webkit-animation: 10s roll linear infinite alternate;
}
@keyframes roll {
  20% {
    margin-right: 200px;
  }
  40% {
    margin-right: 400px;
  }
  60% {
    margin-right: 600px;
  }
  80% {
    margin-right: 700px;
  }
  100% {
    margin-left: 800px;
  }
}
.mod_wrap .mod_content .play_show .play_info .play_lrc_one {
  position: absolute;
  z-index: 3;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 132px;
  background-image: url(../../img/productimg/pingmu.png);
  background-repeat: repeat-x;
  text-align: center;
}
.mod_wrap .mod_content .play_show .play_info .play_lrc_one pre {
  font-size: 16px;
  color: white;
  line-height: 2.2;
  z-index: 4;
  text-align: center;
  font-weight: 400;
  position: relative;
  height: 600px;
  top: -460px;
}
.mod_wrap .mod_content .play_show .play_photo {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
}
.mod_wrap .mod_content .play_show .play_photo img {
  display: block;
  width: 100%;
  height: 100%;
}
.mod_wrap .mod_content .play_control {
  position: absolute;
  z-index: 10;
  left: 0;
  bottom: 0;
  width: 100%;
  height: auto;
  border: 0;
}
.mod_wrap .mod_content .play_control .btn_control {
  left: 10px;
  bottom: 20px;
  position: absolute;
  float: none;
  margin: 0;
  display: inline-block;
}
.mod_wrap .mod_content .play_control .btn_control .icon_play_red {
  display: block;
  font-size: 0;
  line-height: 0;
  background-image: url(../../img/productimg/bofang.png);
  background-position: -46px 0;
  background-size: 45px;
  width: 45px;
  height: 45px;
}
.mod_wrap .mod_content .play_control .btn_control .icon_stop_red {
  display: none;
  font-size: 0;
  line-height: 0;
  background-image: url(../../img/productimg/zanting.png);
  background-position: -46px 0;
  background-size: 45px;
  width: 45px;
  height: 45px;
}
.mod_wrap .mod_content .play_control .play_progress_bar {
  height: 4px;
  background-color: lightcyan;
  position: relative;
  width: 100%;
  overflow: hidden;
  border: 1px solid #000000 #000;
}
.mod_wrap .mod_content .play_control .play_progress_bar .play_progress_load {
  width: 0px;
  height: 4px;
  background-color: transparent;
  background-image: -webkit-linear-gradient(left, #5bd8ff, #ff0000);
  background-image: -moz-linear-gradient(left, #5bd8ff, #ff0000);
  background-image: -o-linear-gradient(left, #5bd8ff, #ff0000);
  background-image: -ms-linear-gradient(left, #5bd8ff, #ff0000);
  background-image: linear-gradient(left, #5bd8ff, #ff0000);
  box-shadow: inset 0 -2px 2px rgba(0, 0, 0, 0.4);
  position: absolute;
}
.mod_wrap .mod_content .play_control .play_control_time {
  right: 13px;
  bottom: 13px;
  color: #fff;
  position: absolute;
}
.mod_wrap .mod_content .play_control .btn_barrage {
  right: 0;
  bottom: 20px;
  padding: 10px 12px;
  width: auto;
  height: auto;
  position: absolute;
  display: block;
}
.mod_wrap .mod_content .play_control .btn_barrage .icon_barrage_on {
  display: block;
  background-image: url(../../img/productimg/tanmu.png);
  width: 36px;
  height: 36px;
}
.mod_wrap .mod_content .play_control .btn_barrage .icon_barrage_up {
  display: none;
  background-image: url(../../img/productimg/guan.png);
  width: 36px;
  height: 36px;
}
